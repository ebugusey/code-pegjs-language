{
    "fileTypes": [
        "pegjs"
    ],
    "name": "PEG.js File",
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#label"
        },
        {
            "include": "#defRule"
        },
        {
            "include": "#rule"
        },
        {
            "include": "#literal"
        },
        {
            "include": "#charclass"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#inlinejs"
        }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "begin": "/\\*",
                    "end": "\\*/",
                    "name": "comment.block.pegjs"
                },
                {
                    "match": "//.*$\\n?",
                    "name": "comment.line.double-slash.pegjs"
                }
            ]
        },
        "label": {
            "match": "(\\w+)\\s*(?=:)",
            "captures": {
                "1": {
                    "name": "entity.other.attribute-name.attribute.pegjs"
                }
            }
        },
        "rule": {
            "match": "[a-zA-Z_][a-zA-Z_0-9]*",
            "name": "entity.name.function.pegjs"
        },
        "escape_sequence": {
            "match": "\\\\(x\\h{2}|u\\h{4}|[\"']|[^\\W\\d_]|\\\\)",
            "name": "constant.character.escape.pegjs"
        },
        "literal": {
            "patterns": [
                {
                    "begin": "\"",
                    "end": "\"",
                    "name": "string.quoted.double.pegjs",
                    "patterns": [
                        {
                            "include": "#escape_sequence"
                        }
                    ]
                },
                {
                    "begin": "'",
                    "end": "'",
                    "name": "string.quoted.single.pegjs",                    
                    "patterns": [
                        {
                            "include": "#escape_sequence"
                        }
                    ]
                }
            ]
        },
        "charclass": {
            "begin": "\\[",
            "end": "\\]",
            "name": "declaration.keyword.pegjs"
        },
        "defRule": {
            "match": "(\\w+)\\s*(?=\\=)",
            "captures": {
                "1": {
                    "name": "entity.name.function.pegjs"
                }
            }
        },
        "operators": {
            "match": "[*?/.$!=+&]",
            "name": "keyword.operator.pegjs"
        },
        "inlinejs": {
            "begin": "{",
            "end": "}",
            "name": "source.js.embedded.pegjs",
            "patterns": [
                {
                    "include": "source.js"
                }
            ]
        }
    },
    "scopeName": "source.pegjs"
}